<!DOCTYPE html>
<html>
<head> <% include ./head %> </head>
<body>
<% include ./header %>

    <a class="btn" href="/additem">Add New Item</a>

    <div class="card">

    <table class="highlight">
        <tr>
            <th>book</th>
            <th>author</th>
            <th>bookreview</th>
            <th>url</th>
            <th>Added By</th>
            <th>Likes</th>
            <th>Actions</th>
        </tr>

        <% items.forEach(function(item){  %>

            <tr>
                <td><%= item.bookname %></td>
                <td><%= item.authorname %></td>
                <td><%= item.bookreview %></td>
                <td><a href="<%= item.url %>" target="_blank"><%= item.url %></a></td>
                <td><%= item.addedBy%></td>
                <td><%= item.likes%></td>
                <td>
                    <a href="/like?song=<%=item.bookname%>"><i class="material-icons">favorite</i></a>
                <i class="material-icons">delete</i>
                </td>


            </tr>



        <% }) %>
    </table>

    </div>

<% include ./footer %>
</body>
</html>
